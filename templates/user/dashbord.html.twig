{% extends 'base.html.twig' %}

{% block title %} Your Raodtrip dashbord {% endblock %}

{% block body %}

    <h1>Your Raodtrip dashbord</h1>

    <div class="container mt4" style="float: left">

        <div class="col-md-4">

            {{ include('_messages.html.twig') }}

            <div class="vertical-navbar">
        
                <ul class="navbar-nav mr-auto">

                    {% if user.owner is not null %}
    
                        <li class="nav-item">

                            <a class="nav-link"  href="{{ path('booking.booking.requests') }}">My booking requests</a>

                        </li>
    
                        <li class="nav-item">

                            <a class="nav-link"  href="{{ path('advert.owner') }}">My adverts</a>

                        </li>
    
                        <li class="nav-item">

                            <a class="nav-link"  href="{{ path('user.owner.edit') }}">My owner contact informations</a>

                        </li>
    
                        <li class="nav-item">

                            <a class="nav-link"  href="{{ path('payment.owner.bills') }}">My bills</a>

                        </li>
                        
                    {% endif %}
    
                    <li class="nav-item">

                        <a class="nav-link"  href="{{ path('user.user.edit') }}">My user data</a>

                    </li>
    
                    <li class="nav-item">

                        <a class="nav-link"  href="{{ path('user.profile.update') }}">My profile ({{ profileCompletion }}% completed)</a>

                    </li>
    
                    <li class="nav-item">

                        <a class="nav-link"  href="{{ path('security.resetting.dashbord') }}">My password</a>

                    </li>

                    <li class="nav-item">

                        <a class="nav-link"  href="{{ path('user.favorites') }}">My favorites</a>

                    </li>

                    <li class="nav-item">

                        <a class="nav-link"  href="{{ path('communication.messages') }}">My messages</a>
                        
                    </li>

                    <li class="nav-item">

                        <a class="nav-link"  href="{{ path('rating.dashbord') }}">My ratings</a>
                        
                    </li>

                    <li class="nav-item">

                        <a class="nav-link"  href="{{ path('booking.bookings') }}">My bookings</a>
                        
                    </li>
    
                </ul>
    
            </div>

        </div>
        
    </div>    

    <div class="container mt-4">
    
        <div class="row">
 
            <div class="col-md-4">

                Username :

            </div>

            <div class="col-md-4">

                {{ user.username }}

            </div>

        </div>
    
        <div class="row">

            <div class="col-md-4">

                Firstname :

            </div>

            <div class="col-md-4">

                {{ user.firstname }}

            </div>

        </div>
    
        <div class="row">

            <div class="col-md-4">

                Name :

            </div>

            <div class="col-md-4">

                {{ user.name }}

            </div>

        </div>
    
        <div class="row">

            <div class="col-md-4">

                Phone :

            </div>

            <div class="col-md-4">

                {{ user.phoneNumber }}

            </div>

        </div>

        {% if user.owner is not null %}
    
            <div class="row">

                <div class="col-md-4">

                    Company name :

                </div>

                <div class="col-md-4">

                    {{ user.owner.companyName }}

                </div>

            </div>
    
            <div class="row">

                <div class="col-md-4">

                    Company number :

                </div>

                <div class="col-md-4">

                    {{ user.owner.companyNumber }}

                </div>

            </div>
    
            <div class="row">
                

                <div class="col-md-4">

                    Billing address :

                </div>

                <div class="col-md-4">

                    {{ user.owner.billingAddress.street }}, {{ user.owner.billingAddress.number }}  {% if user.owner.billingAddress.box %}/{{ user.owner.billingAddress.box }}{% endif %},
                    {{ user.owner.billingAddress.zipCode }}  {{ user.owner.billingAddress.city }}, {{ user.owner.billingAddress.country }} 
                    {% if user.owner.billingAddress.state %}({{ user.owner.billingAddress.state }}{% endif %})

                </div>

            </div>
            
        {% endif %}

    </div>

{% endblock %}