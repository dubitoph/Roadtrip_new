{% extends 'base.html.twig' %}

{% block title %} Update user profile {% endblock %}

{% block body %}

    {{ include('_messages.html.twig', { 'form': form }) }}

    <div class="container mt-4">

        <h1>Update my user profile</h1>

        {{ form_start(form) }}

            {{ form_row ( form.firstname, { 'label': 'Firstname', 'attr': { 'placeholder' : 'Firstname...' } } ) }}
            {{ form_row ( form.name, { 'label': 'Name', 'attr': { 'placeholder' : 'Name...' } } ) }}
            {{ form_row ( form.phoneNumber, { 'label': 'Phone', 'attr': { 'placeholder' : 'Phone...' } } ) }}
            {{ form_row ( form.email, { 'label': 'Email address', 'attr': { 'placeholder' : 'Email address...' } } ) }}
            {{ form_row ( form.username, { 'label': "Username", 'attr': { 'placeholder' : "Username..." } } ) }}                   

            <button type="submit" class="btn btn-success">Update</button>        

        {{ form_end(form) }}
        
    </div>

{% endblock %}