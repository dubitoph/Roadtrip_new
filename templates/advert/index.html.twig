{% extends 'base.html.twig' %}

{% block title %}
    Roadtripr - The adverts
{% endblock %}

{% block body %}
  <div class="container pb-5">
    <h2>Results</h2>
    <div class="row">
      <div class="col-md-4">
        <section id="SearchForm">
          {{ form_start(form, {'attr': {'id': 'search_form'}}) }}
          <label for="minimumBedsNumber">Nombre de places</label>
          <div class="select">
              {{ form_widget(form.minimumBedsNumber) }}
          </div>

          <label for="beginAt">Disponibilit√©</label>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">Du</span>
            </div>
            {{ form_widget(form.beginAt) }}
            <div class="input-group-prepend">
              <span class="input-group-text">Au</span>
            </div>
            {{ form_widget(form.endAt) }}
          </div>

          <label for="minimumPrice">Prix par jour</label>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text">De</span>
            </div>
            {{ form_widget(form.minimumPrice) }}
            <div class="input-group-prepend">
              <span class="input-group-text">A</span>
            </div>
            {{ form_widget(form.maximumPrice) }}
          </div> 
          <div class="slider-range-wrap">
            <div id ="pricesSlider" data-minPriceParameter={{ minPriceParameter }} data-maxPriceParameter={{ maxPriceParameter }}></div>
          </div>

          <label for="cellEquipments">Options de la cellule</label>
          {{ form_widget(form.cellEquipments) }}

          <label for="carrierEquipments">Options du porteur</label>
          {{ form_widget(form.carrierEquipments) }}

          <label for="">Dans un rayon de</label>
            {{ form_widget(form.distance) }}
          <div class="slider-range-wrap">
            <div id ="distanceSlider" data-minDistanceParameter={{ minDistanceParameter }} data-maxDistanceParameter={{ maxDistanceParameter }}></div>
          </div>

          {{ form_row(form.address, {'id': 'search_address'}) }}

          {{ form_row(form.city) }}

          <div class="select">
            {{ form_widget(form.sorting) }}
          </div>
          <button class="btn btn-primary">Search</button>
        {{ form_end(form) }}
        </section>
      </div>
      <div class="col-md-8">
        <section id="SearchResults">
        </section>
      </div>
    </div>
  </div>

  {% block javascripts %}

      {{ parent() }}

      {{ encore_entry_script_tags('advertsSearch') }}

  {% endblock %}

{% endblock %}
