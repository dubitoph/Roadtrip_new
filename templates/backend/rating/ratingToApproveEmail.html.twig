        {% endif %}
    
    </div>

</div>

<div class="row">

    <div class='col'>

        Score : 
    
    </div>

    <div class='col'>

        {{ rating.score }}
    
    </div>

</div>

<div class="row">

    <div class='col'>

        Commentaire : 
    
    </div>

    <div class='col'>

        {{ rating.comment }}
    
    </div>

</div>

