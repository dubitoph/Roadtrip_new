{% extends 'base.html.twig' %}

{% block title %}

    Roadtripr - Backend : marks management
    
{% endblock %}

{% block body %}

    <div class="container mt4">

        {{ include('_messages.html.twig') }}

        <h1>Maks management</h1>

        <table class="table striped">

            <thead>

                <tr>

                    <th>Mark</th>
                    <th>Actions</th>

                </tr>

            </thead>

            <tbody>
            
                {% for mark in marks %}

                    <tr>

                        <td>{{ mark.mark }}</td>
                        <td>
                            
                            <a href="{{ path('backend.mark.edit', { 'id': mark.id }) }}" class="btn btn-secondary">Edit</a>
                            <form method = "post" action="{{ path('backend.mark.delete', { 'id': mark.id }) }}" style="display: inline-block">

                                <input type="hidden"  name="_method" value="DELETE">
                                <input type="hidden"  name="_token" value="{{ csrf_token('delete' ~ mark.id ) }}">
                                <button class="btn btn-danger">Remove</button>

                            </form>

                        </td>

                    </tr>
            
                {% endfor %}

            </tbody>

        </table>

        <div class="text-right">

            <a href="{{ path('backend.mark.create') }}" class="btn btn-primary">Create a new mark</a>

        </div>

    </div>
   
    {% block javascripts %}
        
        {{ parent() }}

        {{ encore_entry_script_tags('indexMark') }}
        
    {% endblock %}

{% endblock %}
