{% extends 'base.html.twig' %}

{% block title %} Gérer les types de carburant {% endblock %}

{% block body %}

    <div class="container mt4">

        {{ include('_messages.html.twig') }}

        <h1>Gérer les types de carburant</h1>

        <table class="table striped">

            <thead>

                <tr>

                    <th>Type de carburant</th>
                    <th>Actions</th>

                </tr>

            </thead>

            <tbody>
            
                {% for fuel in fuels %}

                    <tr>

                        <td>{{ fuel.fuel }}</td>
                        <td>
                            
                            <a href="{{ path('backend.fuel.edit', { 'id': fuel.id }) }}" class="btn btn-secondary">Editer</a>
                            <form method = "post" action="{{ path('backend.fuel.delete', { 'id': fuel.id }) }}" style="display: inline-block">

                                <input type="hidden"  name="_method" value="DELETE">
                                <input type="hidden"  name="_token" value="{{ csrf_token('delete' ~ fuel.id ) }}">
                                <button class="btn btn-danger">Supprimer</button>

                            </form>

                        </td>

                    </tr>
            
                {% endfor %}

            </tbody>

        </table>

        <div class="text-right">

            <a href="{{ path('backend.fuel.create') }}" class="btn btn-primary">Créer un nouveau type de carburant</a>

        </div>

    </div>
   
    {% block javascripts %}
        
        {{ parent() }}

        {{ encore_entry_script_tags('indexFuel') }}
        
    {% endblock %}

{% endblock %}
